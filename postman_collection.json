		{
			"name": "Email Search",
			"folder": "Email Operations",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/emails/search?text={{search_text}}&from={{from_email}}&subject={{subject}}&folder={{folder_name}}&accountName={{account_name}}",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"emails",
						"search"
					],
					"query": [
						{
							"key": "text",
							"value": "{{search_text}}",
							"description": "Text search across email body and subject"
						},
						{
							"key": "from",
							"value": "{{from_email}}",
							"description": "Filter by sender email"
						},
						{
							"key": "subject",
							"value": "{{subject}}",
							"description": "Filter by subject"
						},
						{
							"key": "to",
							"value": "{{to_email}}",
							"description": "Filter by recipient email",
							"disabled": true
						},
						{
							"key": "folder",
							"value": "{{folder_name}}",
							"description": "Filter by folder name"
						},
						{
							"key": "accountName",
							"value": "{{account_name}}",
							"description": "Filter by account name"
						},
						{
							"key": "categories",
							"value": "INTERESTED,MEETING_BOOKED",
							"description": "Filter by email categories (comma-separated)",
							"disabled": true
						},
						{
							"key": "dateFrom",
							"value": "2024-01-01",
							"description": "Filter emails from this date (YYYY-MM-DD)",
							"disabled": true
						},
						{
							"key": "dateTo",
							"value": "2024-12-31",
							"description": "Filter emails to this date (YYYY-MM-DD)",
							"disabled": true
						},
						{
							"key": "flags",
							"value": "SEEN,FLAGGED",
							"description": "Filter by email flags (comma-separated)",
							"disabled": true
						}
					]
				},
				"description": "Search emails with various filters including text, sender, subject, folder, account, categories, date range, and flags"
			},
			"response": []
